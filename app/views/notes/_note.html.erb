<% user = User.find(note.user_id) %>
<%= note.body %>
<p>
  <em>
    Added by 
    <%= user.email %> 
    <%= time_ago_in_words(note.updated_at)%> ago
    <% if user == current_user %>
      <%#= button_to("Edit Note", edit_note_url(note)) %>
      <%= button_to "Delete Note", note_url(note), 
            method: :delete, 
            data: {confirm: "Are you sure?"} %>
    <% end %>
  </em>
</p>
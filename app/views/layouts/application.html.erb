<!DOCTYPE html>
<html>
<head>
  <title>Jenius</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<ul display="inline">
  <li>
    <%= link_to "All Bands", bands_url %>
  </li>
  <li>
    <%= link_to "User Info", user_url(current_user) %>
  </li>
  <li>
    <%= button_to "Logout", session_url, method: :delete if logged_in? %>
  </li>
</ul>
<%= render 'shared/flash' %>
<%= yield %>

</body>
</html>
